<form action="/product/update/<%= product.id %>" method="post" class="container" style="width: 20%">

  <h2>you 're editing a product...</h2>

  <input value="<%= product.quantity %>" name="quantity" type="text" class="form-control"/>

  <input value="<%= product.pricePer %>" name="pricePer" type="text" class="form-control"/>

  <input value="<%= product.total %>" name="total" type="text" class="form-control"/>


  <input type="submit" value="Proceed" class="btn btn-lg btn-primary btn-block" />

  <input type="hidden" name="_csrf" value="<%= _csrf %>"/>

</form>
